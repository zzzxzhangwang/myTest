.slider{
  width: 100%;
  height: 390rpx;
  overflow: hidden;
}
.slider, 
.slider image ,
.slider swiper{
    width: 100%;
    height: 390rpx;
}


.slider image{
  width: 100%;
  height: 390rpx;
}

.index-nav image{
  width: 80rpx;
  height: 80rpx;
}

.index-nav{
  display: flex;
  flex-wrap: wrap;
}

.index-nav .nav-item{
  width: 33.33333%;
  height: 200rpx;
  
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 14px;

  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.index-nav .nav-item:nth-child(3n){
  border-right: 0 none;
}

/* ！！小程序的图片记得设置宽高 */

.index-nav image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.index-enter {
  display: flex;
  padding: 20rpx 25rpx;
}
.index-enter .enter-item {
  width: 50%;
  display: flex;
  justify-content: center;
}
.index-enter image {
  width: 320rpx;
  height: 178rpx;
}